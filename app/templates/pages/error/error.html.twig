{# This is the layout template for error pages.  Note that there is no navigation bar. #}
{% extends "pages/abstract/base.html.twig" %}

{% block page_title %}{{ translate('ERROR.TITLE') }}{% endblock %}

{% block page_description %}{{ translate('ERROR.DESCRIPTION') }}{% endblock %}

{% block body %}
    <body {% block body_attributes %}{% endblock %}>
        <!-- Main content -->
        <section class="content">
          <div class="error-page container">
            {% block headline %}<h2 class="headline text-red"><i class="fas fa-terminal" aria-hidden="true"></i></h2>{% endblock %}

            <div class="error-content">
              <br /><h3>{% block heading %}<i class="fas fa-exclamation-triangle text-red"></i> {{ translate('ERROR.ENCOUNTERED') }}{% endblock %}</h3>

              {% block content %}
                  {% if description or title %}<p>{{ translate('ERROR.DETAIL') }}</p>{% endif %}
                  <div class="alert alert-danger">
                        {% if title %}<p><strong>{{ title }}</strong></p>{% endif %}
                        {% if description %}<p>{{ description }}</p>{% endif %}
                  </div>
                  <p class="lead">
                    <a href="{{ urlFor('index', [], [], '/') }}">{{ translate('ERROR.RETURN') }}</a>
                  </p>
              {% endblock %}
            </div>
            <!-- /.error-content -->
          </div>
          <!-- /.error-page -->
        </section>
        <!-- /.content -->
    </body>
{% endblock %}
